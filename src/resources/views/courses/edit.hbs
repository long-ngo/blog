<h3>Cập nhập khóa học</h3>

<form class="mt-4" method="POST" action="/me/courses/{{course._id}}?_method=PUT">
    <div class="form-group">
        <label for="nameCourse">Tên khóa học</label>
        <input type="text" name="name" class="form-control" id="nameCourse" value="{{course.name}}">
    </div>

    <div class="form-group">
        <label for="description">Mô tả</label>
        <textarea type="text" name="description" class="form-control" id="description">{{course.description}}</textarea>
    </div>

    <div class="form-group">
        <label for="videoId">Video ID</label>
        <input type="videoId" name="videoId" class="form-control" id="videoId" value="{{course.videoId}}">
    </div>

    <div class="form-group">
        <label for="level">Trình độ</label>
        <input type="level" name="level" class="form-control" id="level" value="{{course.level}}">
    </div>
    
    <button type="submit" class="btn btn-primary">Submit</button>
</form>