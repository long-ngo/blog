<div class="row">
    {{#each courses}}
    <div class="col">
        <div class="card" style="width: 18rem;">
            <a href="/courses/{{this.slug}}">
                <img src="https://img.youtube.com/vi/{{this.videoId}}/sddefault.jpg" class="card-img-top" alt="{{this.name}}">
            </a>
            <div class="card-body">
                <a href="/courses/{{this.slug}}">
                    <h5 class="card-title">{{this.name}}</h5>
                </a>
                <p class="card-text">{{this.description}}</p>
                <a href="#" class="btn btn-primary">Miễn phí</a>
            </div>
        </div>
    </div>
    {{/each}}
</div>